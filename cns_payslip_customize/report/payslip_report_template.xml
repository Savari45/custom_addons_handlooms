                        <!-- Earnings & Deductions Side-by-Side -->
                        <t t-set="earnings"
                           t-value="o.line_ids.filtered(lambda l: l.category_id and l.category_id.code in ['BASIC','ALW'])"/>
                        <t t-set="deductions"
                           t-value="o.line_ids.filtered(lambda l: l.category_id and l.category_id.code in ['DED'])"/>

                        <table class="section-table">
                            <tr>
                                <th width="20%">EARNINGS</th>
                                <th width="20%" style="text-align:right;">MASTER</th>
                                <th width="20%" style="text-align:right;">AMOUNT</th>
                                <th width="20%" class="divider-col">DEDUCTIONS</th>
                                <th width="20%" style="text-align:right;">AMOUNT</th>
                            </tr>

                            <t t-set="max_len" t-value="max(len(earnings), len(deductions))"/>
                            <t t-foreach="range(max_len)" t-as="i">
                                <tr>
                                    <!-- Earnings -->
                                    <td>
                                        <t t-if="i &lt; len(earnings)">
                                            <span t-field="earnings[i].name"/>
                                        </t>
                                    </td>
                                    <td class="amount-cell">
                                        <t t-if="i &lt; len(earnings)">
                                            <t t-set="earning_code" t-value="earnings[i].code"/>
                                            <t t-if="earning_code == 'Basic'">
                                                <span t-field="o.contract_id.wage"
                                                      t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                            </t>
                                            <t t-elif="earning_code == 'LTA'">
                                                <span t-field="o.contract_id.x_lunch_time_allowance"
                                                      t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                            </t>
                                            <t t-elif="earning_code == 'CA'">
                                                <span t-field="o.contract_id.x_conveyance_allowance"
                                                      t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                            </t>
                                            <t t-elif="earning_code == 'HA'">
                                                <span t-field="o.contract_id.x_house_allowance"
                                                      t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                            </t>
                                            <t t-elif="earning_code == 'CLA'">
                                                <span t-field="o.contract_id.x_cost_of_living_allowance"
                                                      t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                            </t>
                                        </t>
                                    </td>
                                    <td class="amount-cell">
                                        <t t-if="i &lt; len(earnings)">
                                            <span t-field="earnings[i].amount"
                                                  t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                        </t>
                                    </td>

                                    <!-- Deductions -->
                                    <td class="divider-col">
                                        <t t-if="i &lt; len(deductions)">
                                            <span t-field="deductions[i].name"/>
                                        </t>
                                    </td>
                                    <td class="amount-cell">
                                        <t t-if="i &lt; len(deductions)">
                                            <span t-field="deductions[i].amount"
                                                  t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                        </t>
                                    </td>
                                </tr>
                            </t>

                            <!-- Total Row - UNTOUCHED -->
                            <tr class="total-row">
                                <td>Total Earnings</td>
                                <td></td>
                                <td class="amount-cell">
                                    <span t-esc="sum(l.amount for l in earnings)"
                                          t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                </td>
                                <td class="divider-col">Total Deductions</td>
                                <td class="amount-cell">
                                    <span t-esc="sum(l.amount for l in deductions)"
                                          t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                </td>
                            </tr>
                        </table>

                        <!-- Net Pay -->
                        <div class="net-pay">
                            Net Salary Payable:
                            <t t-foreach="o.line_ids" t-as="line">
                                <t t-if="line.code == 'NET'">
                                    <span t-field="line.amount"
                                          t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                </t>
                            </t>
                            <div class="amount-in-words">
                                Amount in Words:
                                <strong>
                                    <t t-foreach="o.line_ids" t-as="line">
                                        <t t-if="line.code == 'NET'">
                                            <span t-esc="res_company.currency_id.amount_to_text(line.amount)"/>
                                        </t>
                                    </t>
                                </strong>
                            </div>
                        </div>
                        <div style="text-align: right !important; margin-top: 65px;">
                            <strong>Authorized signature</strong>

                        </div>
                        <div style="text-align: center; margin-top: 50px;">
                            <strong>This is a digitally generated document and does not require a signature</strong>
                        </div>
                    </div>
                </t>
            </t>
        </t>
