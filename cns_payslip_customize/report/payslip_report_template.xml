    <!-- 2. Report Action for CNS Payslip -->
    <record id="action_report_cns_payslip" model="ir.actions.report">
        <field name="name">CNS Payslip</field>
        <field name="model">hr.payslip</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">cns_payslip_customize.report_payslip</field>
        <field name="report_file">cns_payslip_customize.report_payslip</field>
